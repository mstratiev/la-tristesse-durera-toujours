html, body, div, a, img, span
	padding 0
	margin 0
	
#content
	display block
	height auto
	width 100%
	padding 30px
	box-sizing border-box
	text-align center
	padding-top 10rem
	
	img
		min-height 6rem
		max-height 6rem
	.word
		display inline-block
		margin-right 100px
		margin-bottom 30px
		
	img 
		filter: gray; /* IE6-9 */
		filter: grayscale(1); /* Microsoft Edge and Firefox 35+ */
		-webkit-filter: grayscale(1); /* Google Chrome, Safari 6+ & Opera 15+ */

	img:hover
		filter: none;
		-webkit-filter: grayscale(0);
footer
	width 100%
	text-align center
	position absolute
	bottom 0
	font-size .7rem
	div
		width 100%